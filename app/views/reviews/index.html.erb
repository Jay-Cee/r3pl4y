<h1>Listing reviews</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Rating</th>
    <th>Review</th>
    <th>Finished</th>
    <th>Published</th>
    <th>Game</th>
    <th>Member</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%= review.id %></td>
    <td><%= review.rating %></td>
    <td><%= review.review %></td>
    <td><%= review.finished %></td>
    <td><%= review.published %></td>
    <td><%= review.game_id %></td>
    <td><%= review.user_id %></td>
    <td><%= link_to 'Show', review %></td>
    <td><%= link_to 'Edit', edit_review_path(review) %></td>
    <td><%= link_to 'Destroy', review, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Review', new_review_path %>
